        <a id="config_description_change_link" href="javascript:void(0)" onclick="editConfigDescription();"
           style="float:right; margin-top:-30px;">edit</a>
        <p id="config_description">{% render "AceUtilitiesBundle:Default:getConfigDescription" with {'id': config_id} %}</p>
    </div>
</div>
